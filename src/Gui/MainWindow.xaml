<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Pytocs.Gui"
        Width="800" Height="600"
        Title="MainWindow">
  <DockPanel>
    <Menu DockPanel.Dock="Top">
      <MenuItem Header="_File">
        <MenuItem Header="_Open..."/>
        <Separator/>
        <MenuItem Header="_Exit"/>
      </MenuItem>
    </Menu>
    <TabControl>
      <TabItem Header="Folder Converter">
        <local:FolderConverterTab></local:FolderConverterTab>
      </TabItem>
      <TabItem Header="File &amp; Snippet Converter">
        <local:SnippetConverterTab></local:SnippetConverterTab>
      </TabItem>
    </TabControl>
  </DockPanel>
</Window>